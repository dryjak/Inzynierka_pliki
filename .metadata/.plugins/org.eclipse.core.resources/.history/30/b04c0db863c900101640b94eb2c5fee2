#ifndef INC_STATE_MASHINE_H_
#define INC_STATE_MASHINE_H_

typedef enum{
		IDLE = 0,
		DEBOUNCE,
		PRESSED
}ButtonState;

typedef struct{
	ButtonState 	State;

	GPIO_TypeDef 	*GpioPort;
	uint16_t 		GpioPin;

	uint32_t		TimerDebounce;
	uint32_t 		LastTick;

	void (*Callback)(void);
}Button_t;

void Button_Init(Button_t *Button, GPIO_InitTypeDef *GpioPort, uint16_t GpioPin, uint32_t TimerDebounce);



#endif /* INC_STATE_MASHINE_H_ */

