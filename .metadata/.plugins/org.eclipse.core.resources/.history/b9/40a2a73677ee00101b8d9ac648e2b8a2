/* Private typedef -----------------------------------------------------------*/
/* USER CODE BEGIN PTD */

/* USER CODE END PTD */

/* Private define ------------------------------------------------------------*/
/* USER CODE BEGIN PD */
#define ENCODER_PULSES_PER_REV 1320
#define ENCODER_DT  	0.005f  	// 10ms = 0.01s
#define ANGLE_DT    	0.005f		//same as encoderDt

#define PWM_MAX_VALUE 	1000.0
//PID ANGLE
#define PID_ANGLE_P 	38.0f
#define PID_ANGLE_I 	0
#define PID_ANGLE_D 	0.3f

//PID ENCODER
#define PID_ENCODER_P 	2.8f
#define PID_ENCODER_I 	28.0f
#define PID_ENCODER_D 	0.04f
#define RPM_MAX			320.0f
#define ENCODER_MAX		150.0f
#define ANGLE_MAX		27.0f
//Compensation for mass center
#define ANGLE_DUE_TO_MASS_ASIMETRY -2.0f

/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/

/* USER CODE BEGIN PV */
//Initializing motors
Motor_t MotorA, MotorB;
uint8_t MotorA_PWM, MotorB_PWM;
uint8_t MotorA_Dir, MotorB_Dir;

//Initializing encoders
PID_t PidEncoderA, PidEncoderB;
Encoder_t EncoderA, EncoderB;

//PID regulator for steering motors speed with MPU6050
PID_t PidSpeed;

uint8_t EncoderCallback = 0;

//PID regulator for steering velocity with MPU6050 readings
PID_t PidAngle;
float CalculatedVelocity;
float PwmA = 0;
float PwmB = 0;
uint8_t DirA, DirB;
uint8_t AngleFlag;

MPU6050_t MPU6050;
float Roll, Pitch, Yaw;

Data_t CalibrateAccel;
Data_t CalibrateGyro;
uint8_t TMP;

typedef struct{
	float AnglePitch;		//measured robot tilt angle

	float MotorSpeedA;
	float MotorSpeedB;
	float SpeedCurrent;		//aktualna prędkośc - srednia z dwuch kół

	float TargetAngle;		//target angle of the robot (MASS_SIMETRY + velocity)
	float MotorSpeedTarget;		//Target speed of the robot

	float PwmOutputA;		//PWM calculated with PID angle regulator
	float PwmOutputB;
}RobotState_t;

RobotState_t RobotState;

uint8_t Counter = 0;
//printing via uart
char Message[128];
/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_NVIC_Init(void);
/* USER CODE BEGIN PFP */
void EncoderUpdate(void);
void BalanceRegulator_PD(void);
void MoveRobot(void);

/* USER CODE END PFP */

/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */

/* USER CODE END 0 */

/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{

  /* USER CODE BEGIN 1 */

  /* USER CODE END 1 */

  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* USER CODE BEGIN Init */

  /* USER CODE END Init */

  /* Configure the system clock */
  SystemClock_Config();

  /* USER CODE BEGIN SysInit */

  /* USER CODE END SysInit */

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_TIM1_Init();
  MX_TIM5_Init();
  MX_I2C1_Init();
  MX_TIM2_Init();
  MX_TIM4_Init();
  MX_USART2_UART_Init();

  /* Initialize interrupts */
  MX_NVIC_Init();
  /* USER CODE BEGIN 2 */
  //initializing motors
  //start PWM
  HAL_TIM_PWM_Start(&htim1, TIM_CHANNEL_1); //for motor A
  HAL_TIM_PWM_Start(&htim1, TIM_CHANNEL_2); //for motor B

  Motor_Init(&MotorA, &htim1, TIM_CHANNEL_1, MotorA_PWM, MotorA_Dir1_GPIO_Port, MotorA_Dir1_Pin, MotorA_Dir2_GPIO_Port, MotorA_Dir2_Pin);
  Motor_Init(&MotorB, &htim1, TIM_CHANNEL_2, MotorB_PWM, MotorB_Dir1_GPIO_Port, MotorB_Dir1_Pin, MotorB_Dir2_GPIO_Port, MotorB_Dir2_Pin);

  //initializing encoders
  HAL_TIM_Encoder_Start(&htim2, TIM_CHANNEL_ALL);
  HAL_TIM_Encoder_Start(&htim5, TIM_CHANNEL_ALL);

  Encoder_Init(&EncoderA, &htim5, ENCODER_PULSES_PER_REV, ENCODER_DT);
  Encoder_Init(&EncoderB, &htim2, ENCODER_PULSES_PER_REV, ENCODER_DT);

  //initializing mpu6050 module
  MPU6050_Init(&MPU6050, &hi2c1, 0x68);

  //initializing PID for encoders and angle
  PID_Init(&PidEncoderA, PID_ENCODER_P, PID_ENCODER_I, PID_ENCODER_D, ENCODER_DT, PWM_MAX_VALUE, -PWM_MAX_VALUE);
  PID_Init(&PidEncoderB, PID_ENCODER_P, PID_ENCODER_I, PID_ENCODER_D, ENCODER_DT, PWM_MAX_VALUE, -PWM_MAX_VALUE);

  PID_Init(&PidAngle, PID_ANGLE_P, PID_ANGLE_I, PID_ANGLE_D, ANGLE_DT , ENCODER_MAX, -ENCODER_MAX);

  HAL_TIM_Base_Start_IT(&htim4);

  // Wartości początkowe
  RobotState.TargetAngle = ANGLE_DUE_TO_MASS_ASIMETRY;
  RobotState.MotorSpeedTarget = 0.0f;
  HAL_Delay(1000);

  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  while (1)
  {
	  if (EncoderCallback == 1)
	  	  {
		  EncoderCallback = 0;
		  MPU6050_Angle(&MPU6050, &Roll, &Pitch, &Yaw);
		  RobotState.AnglePitch = Pitch;
		  EncoderUpdate();
		  BalanceRegulator_PD();
		  MoveRobot();


		  //MPU6050_CalibrateAccel(&MPU6050, &CalibrateAccel);
		  //MPU6050_CalibrateGyro(&MPU6050, &CalibrateGyro);



//		  sprintf(Message, "%.3f;%.2f;%.2f\n", Roll, EncoderB.AngularVelocity, RobotState.SpeedTargetB);
//		  HAL_UART_Transmit(&huart2,(uint8_t*) Message, strlen(Message), HAL_MAX_DELAY);

	  	  }

    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */
  }
  /* USER CODE END 3 */
}

/**
  * @brief System Clock Configuration
  * @retval None
  */
void SystemClock_Config(void)
{
  RCC_OscInitTypeDef RCC_OscInitStruct = {0};
  RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};

  /** Configure the main internal regulator output voltage
  */
  __HAL_RCC_PWR_CLK_ENABLE();
  __HAL_PWR_VOLTAGESCALING_CONFIG(PWR_REGULATOR_VOLTAGE_SCALE1);

  /** Initializes the RCC Oscillators according to the specified parameters
  * in the RCC_OscInitTypeDef structure.
  */
  RCC_OscInitStruct.OscillatorType = RCC_OSCILLATORTYPE_HSE;
  RCC_OscInitStruct.HSEState = RCC_HSE_ON;
  RCC_OscInitStruct.PLL.PLLState = RCC_PLL_ON;
  RCC_OscInitStruct.PLL.PLLSource = RCC_PLLSOURCE_HSE;
  RCC_OscInitStruct.PLL.PLLM = 25;
  RCC_OscInitStruct.PLL.PLLN = 192;
  RCC_OscInitStruct.PLL.PLLP = RCC_PLLP_DIV2;
  RCC_OscInitStruct.PLL.PLLQ = 4;
  if (HAL_RCC_OscConfig(&RCC_OscInitStruct) != HAL_OK)
  {
    Error_Handler();
  }

  /** Initializes the CPU, AHB and APB buses clocks
  */
  RCC_ClkInitStruct.ClockType = RCC_CLOCKTYPE_HCLK|RCC_CLOCKTYPE_SYSCLK
                              |RCC_CLOCKTYPE_PCLK1|RCC_CLOCKTYPE_PCLK2;
  RCC_ClkInitStruct.SYSCLKSource = RCC_SYSCLKSOURCE_PLLCLK;
  RCC_ClkInitStruct.AHBCLKDivider = RCC_SYSCLK_DIV1;
  RCC_ClkInitStruct.APB1CLKDivider = RCC_HCLK_DIV2;
  RCC_ClkInitStruct.APB2CLKDivider = RCC_HCLK_DIV1;

  if (HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_3) != HAL_OK)
  {
    Error_Handler();
  }
}

/**
  * @brief NVIC Configuration.
  * @retval None
  */
static void MX_NVIC_Init(void)
{
  /* TIM4_IRQn interrupt configuration */
  HAL_NVIC_SetPriority(TIM4_IRQn, 0, 0);
  HAL_NVIC_EnableIRQ(TIM4_IRQn);
}

/* USER CODE BEGIN 4 */
void HAL_TIM_PeriodElapsedCallback(TIM_HandleTypeDef *htim)
{
	if(htim->Instance == TIM4)	//0.005s
	{
		EncoderCallback = 1;
	}
}

void EncoderUpdate(void)
{
	//Update encoders
	Encoder_Update(&EncoderA);
	Encoder_Update(&EncoderB);

	//Average speed of the robot
    RobotState.SpeedCurrent = (EncoderA.AngularVelocity + EncoderB.AngularVelocity) / 2.0f;
    RobotState.MotorSpeedA = EncoderA.AngularVelocity;
    RobotState.MotorSpeedB = EncoderB.AngularVelocity;
}
void BalanceRegulator_PD(void)
{
	//checking if robot is not tilted
	if (Pitch > ANGLE_MAX || Pitch < -ANGLE_MAX)
	{
		AngleFlag = 1;
		return;
	}
	else
	{
		AngleFlag = 0;
	}
	//calculate speed required to get to upright position
	RobotState.MotorSpeedTarget = -1 *  PID_Compute(&PidAngle, Pitch, ANGLE_DUE_TO_MASS_ASIMETRY);

	//calculate PWM required to get to the desired speed
	RobotState.PwmOutputA = PID_Compute(&PidEncoderA, RobotState.MotorSpeedA, RobotState.MotorSpeedTarget);
	RobotState.PwmOutputB = PID_Compute(&PidEncoderB, RobotState.MotorSpeedB, RobotState.MotorSpeedTarget);

	if(RobotState.PwmOutputA > 0)	//dobór kierunku
	{
		DirA = 1;	//MotorA - kierunek do przodu
	}
	else
	{
		DirA = 0;	//MotorA - kierunek do tylu
	}
	if(RobotState.PwmOutputB > 0)	//dobór kierunku
	{
		DirB = 0;	//MotorB - kierunek do przodu
	}
	else
	{
		DirB = 1;	//MotorB - kierunek do tylu
	}
}

void MoveRobot(void)
{
	if(AngleFlag == 1)
	{
		Motor_SetRideParameters(&MotorA, 0, 0);
		Motor_SetRideParameters(&MotorB, 0, 0);
		Motor_Ride(&MotorA);
		Motor_Ride(&MotorB);

		PID_Reset(&PidAngle);
		PID_Reset(&PidSpeed);
		PID_Reset(&PidEncoderA);
		PID_Reset(&PidEncoderB);
		return;
	}
	float AbsPwmA = fabsf(RobotState.PwmOutputA);
	float AbsPwmB = fabsf(RobotState.PwmOutputB);

	if(AbsPwmA > PWM_MAX_VALUE) AbsPwmA = PWM_MAX_VALUE;
	if(AbsPwmB > PWM_MAX_VALUE) AbsPwmB = PWM_MAX_VALUE;

	Motor_SetRideParameters(&MotorA, (uint16_t)AbsPwmA, DirA);
	Motor_SetRideParameters(&MotorB, (uint16_t)AbsPwmB, DirB);
	Motor_Ride(&MotorA);
	Motor_Ride(&MotorB);
}

/* USER CODE END 4 */

